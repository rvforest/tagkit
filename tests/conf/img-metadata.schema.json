{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tagkit image metadata schema",
  "type": "object",
  "patternProperties": {
    "^[^/\\\\]+\\.jpe?g$": {
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "name", "value", "ifd"],
            "properties": {
              "id": { "type": "integer" },
              "name": { "type": "string" },
              "value": {
                "anyOf": [
                  { "type": "string" },
                  { "type": "integer" },
                  { "type": "number" },
                  { "type": "array" }
                ]
              },
              "ifd": {
                "type": "string",
                "enum": ["0th", "1st", "Exif", "GPS"]
              }
            },
            "additionalProperties": false
          }
  }
      },
      "additionalProperties": false,
      "required": ["tags"]
    }
  },
  "additionalProperties": false
}
