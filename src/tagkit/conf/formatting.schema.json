{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tagkit value formatting configuration schema",
  "description": "Schema for validating the value formatting configuration file (formatting.yaml)",
  "type": "object",
  "patternProperties": {
    "^[A-Za-z0-9_]+$": {
      "$ref": "#/definitions/formatConfig"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "formatConfig": {
      "type": "object",
      "description": "Formatting configuration for a specific EXIF tag",
      "properties": {
        "display": {
          "type": "string",
          "description": "Display format type",
          "enum": [
            "fraction",
            "f_number",
            "decimal",
            "shutter_speed",
            "percent",
            "multiplier",
            "coordinates",
            "lens-info",
            "map",
            "timestamp"
          ]
        },
        "unit": {
          "type": "string",
          "description": "Unit of measurement to append to the formatted value"
        },
        "show_plus": {
          "type": "boolean",
          "description": "Whether to show plus sign for positive values"
        },
        "mapping": {
          "type": "object",
          "description": "Mapping of values to string representations (keys can be integers or single characters)",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "string"
            },
            "^[A-Za-z]$": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["display"],
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "display": {
                "const": "map"
              }
            }
          },
          "then": {
            "required": ["mapping"]
          }
        }
      ]
    }
  }
}
